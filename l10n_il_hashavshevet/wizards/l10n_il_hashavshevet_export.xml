<odoo>
    <record id="view_l10n_il_hashavshevet_export_form" model="ir.ui.view">
        <field name="model">l10n.il.hashavshevet.export</field>
        <field name="arch" type="xml">
            <form>
                <group
                    name="domain"
                    attrs="{'invisible': [('export_file', '!=', False)]}"
                >
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="company_id" invisible="1" />
                    <field name="journal_ids" widget="many2many_tags" />
                </group>
                <group
                    name="results"
                    attrs="{'invisible': [('export_file', '=', False)]}"
                >
                    <field
                        name="export_file"
                        filename="export_file_name"
                        readonly="1"
                    />
                    <field name="export_file_name" invisible="1" />
                    <field
                        name="export_map_file"
                        filename="export_map_file_name"
                        readonly="1"
                    />
                    <field name="export_map_file_name" invisible="1" />
                </group>
                <footer>
                    <button
                        attrs="{'invisible': [('export_file', '!=', False)]}"
                        name="button_export"
                        string="Export"
                        type="object"
                        class="btn btn-primary"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_l10n_il_hashavshevet_export" model="ir.actions.act_window">
        <field name="name">Export to Hashavshevet</field>
        <field name="res_model">l10n.il.hashavshevet.export</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
        id="menu_l10n_il_hashavshevet_export"
        action="action_l10n_il_hashavshevet_export"
        parent="account.menu_finance_reports"
    />
</odoo>
