<odoo>

<record id="category" model="ir.module.category">
    <!--
    add module category to use it for groups, this groups them
    together on the user config screen
    -->
    <field name="name">Bankayma</field>
</record>

<record id="group_user" model="res.groups">
    <!--
    define an own user group for users of child companies, that
    simplifies dumbing down the UI only for them but have full
    functionality for the users of the main company
    -->
    <field name="name">Project User</field>
    <field name="category_id" ref="category" />
    <field name="comment" />
    <field name="implied_ids" eval="[Command.link(ref('base.group_user'))]" />
</record>

<record id="group_manager" model="res.groups">
    <!--
    as project managers also should get a simplified UI, we make them
    their own group too
    -->
    <field name="name">Project Manager</field>
    <field name="category_id" ref="category" />
    <field name="implied_ids" eval="[Command.link(ref('group_user'))]" />
</record>

<record id="group_org_manager" model="res.groups">
    <field name="name">Organization Manager</field>
    <field name="category_id" ref="category" />
</record>

<record id="group_vendor" model="res.groups">
    <field name="name">Vendor</field>
    <field name="category_id" ref="base_portal_type.category_portal_type" />
</record>

<record id="group_income" model="res.groups">
    <field name="name">BANKayma income</field>
    <field name="category_id" ref="base.module_category_user_type" />
</record>

<!-- TODO write migration script that force-loads this file to set those values-->
<!-- rules for group_income -->
<record id="mail.mail_channel_rule" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<record id="mail.mail_activity_rule_user" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<record id="mail.ir_rule_mail_channel_member_group_user" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<record id="mail.ir_rule_mail_notifications_group_user" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<record id="base.res_company_rule_employee" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<record id="base.ir_filters_employee_rule" model="ir.rule">
    <field name="groups" eval="[Command.link(ref('bankayma_base.group_income'))]" />
</record>

<!-- configure backend users -->
<record id="base.group_user" model="res.groups">
    <!-- enable multi-company globally -->
    <field name="implied_ids" eval="[Command.link(ref('base.group_multi_company'))]" />
</record>

</odoo>
