<odoo>

    <record id="view_account_position_form" model="ir.ui.view">
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="vendor_doc" string="Vendors">
                    <group>
                        <field name="vendor_doc_mandatory" />
                    </group>
                    <field
                        name="vendor_doc_description"
                        placeholder="Mandatory vendor document description"
                    />
                </page>
                <page name="tax_deduction" string="Default tax and deductions">
                    <group>
                        <field
                            name="bankayma_tax_id"
                            domain="[('company_id', '=', company_id), ('type_tax_use', '=', 'purchase')]"
                        />
                    </group>
                        <field name="bankayma_deduction_ids">
                            <tree editable="bottom">
                                <field name="amount" />
                                <field name="deduction_percentpoints" />
                            </tree>
                        </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
