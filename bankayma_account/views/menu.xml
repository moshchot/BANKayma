    <menuitem
        id="menu_bankayma_income_open"
        parent="menu_bankayma_income"
        action="action_move_out_invoice_type_open"
        sequence="20"
    />

    <menuitem
        id="menu_bankayma_expense"
        parent="bankayma_base.menu_bankayma_root"
        name="Expense"
        action="account.action_move_in_invoice_type"
        sequence="20"
    />

    <menuitem
        id="menu_bankayma_expense_all"
        parent="menu_bankayma_expense"
        name="All"
        action="account.action_move_in_invoice_type"
        sequence="0"
    />

    <record id="action_move_in_invoice_type_paid" model="ir.actions.act_window">
        <field name="name">Paid</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_bill_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field
            name="context"
        >{'default_move_type': 'in_invoice', 'search_default_closed': True}</field>
    </record>

    <menuitem
        id="menu_bankayma_expense_paid"
        parent="menu_bankayma_expense"
        action="action_move_in_invoice_type_paid"
        sequence="10"
    />

    <record id="action_move_in_invoice_type_validated" model="ir.actions.act_window">
        <field name="name">Validated</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_bill_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field
            name="context"
        >{'default_move_type': 'in_invoice', 'search_default_tier_validated': True}</field>
    </record>

    <menuitem
        id="menu_bankayma_expense_validated"
        parent="menu_bankayma_expense"
        action="action_move_in_invoice_type_validated"
        sequence="20"
    />

    <record id="action_move_in_invoice_type_draft" model="ir.actions.act_window">
        <field name="name">New</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_bill_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field
            name="context"
        >{'default_move_type': 'in_invoice', 'search_default_draft': True}</field>
    </record>

    <menuitem
        id="menu_bankayma_expense_draft"
        parent="menu_bankayma_expense"
        action="action_move_in_invoice_type_draft"
        sequence="30"
    />

    <record id="account.menu_finance" model="ir.ui.menu">
        <field
            name="groups_id"
            eval="[Command.set([ref('bankayma_base.group_full')])]"
        />
    </record>
    <record
        id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root"
        model="ir.ui.menu"
    >
        <field
            name="groups_id"
            eval="[Command.set([ref('bankayma_base.group_full')])]"
        />
    </record>
    <menuitem
        id="menu_bankayma_config_analytic_accounts"
        action="analytic.action_account_analytic_account_form"
        parent="bankayma_base.menu_bankayma_config"
        sequence="110"
    />
    <menuitem
        id="menu_bankayma_config_analytic_plans"
        action="analytic.account_analytic_plan_action"
        parent="bankayma_base.menu_bankayma_config"
        sequence="120"
    />

    <!-- bankayma_base.group_income -->

    <record
        id="action_bankayma_group_income_move_out_invoice"
        model="ir.actions.act_window"
    >
        <field name="name">Income</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_out_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field
            name="domain"
        >[('move_type', '=', 'out_invoice'), ('journal_id.intercompany_sale_company_id', '=', False), ('journal_id.intercompany_purchase_company_id', '=', False), ('journal_id.intercompany_overhead_company_id', '=', False)]</field>
        <field
            name="context"
        >{'default_move_type': 'out_invoice', 'group_by': 'payment_state'}</field>
    </record>

    <record
        id="action_bankayma_group_income_move_internal"
        model="ir.actions.act_window"
    >
        <field name="name">Internal</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_out_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field
            name="domain"
        >['|', '|', ('journal_id.intercompany_sale_company_id', '!=', False), ('journal_id.intercompany_purchase_company_id', '!=', False), ('journal_id.intercompany_overhead_company_id', '!=', False)]</field>
        <field
            name="context"
        >{'bankayma_internal_move': True, 'default_move_type': 'out_invoice', 'group_by': ['validated_state']}</field>
    </record>

    <menuitem
        id="menu_bankayma_group_income_move_internal"
        parent="bankayma_base.menu_bankayma_simplified_income"
        action="action_bankayma_group_income_move_internal"
        groups="bankayma_base.group_manager"
        sequence="2"
    />

    <record id="action_bankayma_group_expense_move" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field
            name="domain"
        >[('move_type', '=', 'in_invoice'), ('journal_id.intercompany_sale_company_id', '=', False), ('journal_id.intercompany_purchase_company_id', '=', False), ('journal_id.intercompany_overhead_company_id', '=', False)]</field>
        <field
            name="context"
        >{'default_move_type': 'in_invoice', 'group_by': ['validated_state']}</field>
    </record>

    <menuitem
        id="menu_bankayma_group_expense_move"
        parent="bankayma_base.menu_bankayma_simplified_income"
        action="action_bankayma_group_expense_move"
        groups="bankayma_base.group_manager"
        sequence="3"
    />

    <record id="bankayma_base.menu_bankayma_simplified_income" model="ir.ui.menu">
        <field name="action" ref="action_bankayma_group_income_move_out_invoice" />
    </record>

    <record id="account.action_account_invoice_from_list" model="ir.actions.server">
        <field
            name="groups_id"
            eval="[Command.link(ref('account.group_account_manager')), Command.unlink(ref('account.group_account_invoice'))]"
        />
    </record>

    <record
        id="account.action_view_account_move_reversal"
        model="ir.actions.act_window"
    >
        <field
            name="groups_id"
            eval="[Command.link(ref('account.group_account_manager')), Command.unlink(ref('account.group_account_invoice'))]"
        />
    </record>

</odoo>
