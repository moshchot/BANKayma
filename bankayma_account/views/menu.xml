        <field name="view_id" ref="account.view_out_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field
            name="context"
        >{'default_move_type': 'out_invoice', 'search_default_closed': True}</field>
    </record>

    <menuitem
        id="menu_bankayma_income_paid"
        parent="menu_bankayma_income"
        action="action_move_out_invoice_type_paid"
        sequence="10"
    />

    <record id="action_move_out_invoice_type_open" model="ir.actions.act_window">
        <field name="name">Pending payment</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_out_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field
            name="context"
        >{'default_move_type': 'out_invoice', 'search_default_open': True}</field>
