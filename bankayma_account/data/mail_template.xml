<odoo noupdate="1">
    <record id="template_vendor_invite" model="mail.template" forcecreate="1">
        <field name="name">Invitation to vendor portal</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="subject">Invitation to vendor portal</field>
        <field name="partner_to">{{object.id}}</field>
        <field name="body_html" type="html">
            <h1>Welcome aboard our BANKayma vendors portal:)</h1>
            <div>
                Please follow this
                <a
                    t-attf-href="{{ object.signup_url }}&amp;redirect=%2Fmy%2Faccount%3Fredirect%3D%2Fmy%2Finvoices%2Fnew"
                >
                    link
                </a>
                and get paid ðŸ¤‘
            </div>
        </field>
    </record>
    <record id="account.email_template_edi_invoice" model="mail.template">
        <field name="body_type">qweb_view</field>
        <field name="body_view_id" ref="qweb_template_edi_invoice" />
    </record>
    <record id="template_account_move_paid" model="mail.template" forcecreate="1">
        <field name="name">Account move paid</field>
        <field name="body_type">qweb_view</field>
        <field name="body_view_id" ref="qweb_template_account_move_paid" />
        <field name="model_id" ref="account.model_account_move" />
        <field name="partner_to">{{object.partner_id.id}}</field>
        <field name="lang">object.partner_id.lang</field>
    </record>
    <record
        id="template_account_move_new_from_portal"
        model="mail.template"
        forcecreate="1"
    >
        <field name="name">Account move from portal</field>
        <field name="body_type">qweb_view</field>
        <field name="body_view_id" ref="qweb_template_account_move_new_from_portal" />
        <field name="model_id" ref="account.model_account_move" />
        <field name="partner_to">{{object.partner_id.id}}</field>
        <field name="lang">object.partner_id.lang</field>
    </record>
    <record
        id="template_account_move_tier_rejected"
        model="mail.template"
        forcecreate="1"
    >
        <field name="name">Account move rejected by tier validation</field>
        <field name="body_type">qweb_view</field>
        <field name="body_view_id" ref="qweb_template_account_move_rejected" />
        <field name="model_id" ref="account.model_account_move" />
        <field name="partner_to">{{object.partner_id.id}}</field>
        <field name="lang">object.partner_id.lang</field>
    </record>
</odoo>
